             if (!this.level().isClientSide) {
-                if (this.isInWall()) {
+                if (this.shouldCheckForSuffocation() && this.isInWall()) { // Pufferfish - optimize suffocation
                     this.hurt(this.damageSources().inWall(), 1.0F);
